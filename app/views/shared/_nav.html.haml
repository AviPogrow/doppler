= nav_bar static: :top, brand: 'The art world in your app.', responsive: true do
  = menu_group do
    = menu_item "Home", root_path
    -if authenticated?
      = menu_item "My Apps", client_applications_path
      = menu_item "Playground", playground_path
      = menu_item "Blog", 'http://artsy.github.io'
      = menu_item "Help", help_path
  = menu_group pull: :right do
    = drop_down "Learn" do
      = menu_item "Getting Started", start_path
    = menu_item "Terms", terms_path
    -if authenticated?
      = menu_item "Sign Out", sign_out_path
    -else
      = menu_item "Sign In", sign_in_path
= bootstrap_flash
