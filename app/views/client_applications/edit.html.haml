= bootstrap_form_for ClientApplication.new(@client_application.attributes), method: 'PUT' do |f|
  %table.table.table-bordered.table-striped
    %tbody
      %tr
        %td{ colspan: 2 }= f.text_field :name, required: true, value: @client_application.attributes.name
      %tr
        %td Client Id
        %td= @client_application.attributes.client_id
      %tr
        %td Client Secret
        %td= @client_application.attributes.client_secret
      %tr
        %td Created
        %td= DateTime.parse(@client_application.attributes.created_at).strftime("%B %d, %Y")
      %tr
        %td Updated
        %td= DateTime.parse(@client_application.attributes.updated_at).strftime("%B %d, %Y")

  = f.primary 'Save'
  = link_to "Cancel", client_applications_path, class: 'btn'
