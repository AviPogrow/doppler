!!!
%html
  %head
    %title Artsy Developers
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    = nav_bar static: :top, brand: 'The art world in your app.', responsive: true do
      = menu_group do
        = menu_item "Home", root_path
        -if authenticated?
          = menu_item "My Apps", client_applications_path
      = menu_group pull: :right do
        -if authenticated?
          = menu_item "Sign Out", sign_out_path
        -else
          = menu_item "Sign In", sign_in_path
    = bootstrap_flash
    .container
      = yield
